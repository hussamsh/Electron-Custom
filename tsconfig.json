{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,  
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["es2015","es2016", "es2017", "dom", "dom.iterable"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}